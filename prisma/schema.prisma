generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  date      DateTime
  passengers Int
  destination String
  message   String?
  createdAt DateTime @default(now())
}

model Flight {
  id          Int      @id @default(autoincrement())
  from        String
  to          String
  date        DateTime
  passengers  Int
  price       Float
  airline     String
  createdAt   DateTime @default(now())
}
